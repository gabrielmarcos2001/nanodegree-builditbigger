<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Ripple Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/circle_1"
            android:layout_width="@dimen/ripple_size"
            android:layout_height="@dimen/ripple_size"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:background="@drawable/stroke_circle_1"/>

        <View
            android:id="@+id/circle_2"
            android:layout_width="@dimen/ripple_size"
            android:layout_height="@dimen/ripple_size"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:background="@drawable/stroke_circle_2"/>

        <View
            android:id="@+id/circle_3"
            android:layout_width="@dimen/ripple_size"
            android:layout_height="@dimen/ripple_size"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:background="@drawable/stroke_circle_1"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/button_image_size"
        android:layout_height="@dimen/button_image_size"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/awesome"/>

</RelativeLayout>